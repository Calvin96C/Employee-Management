<UserControl x:Class="Employee_Management.UserControls.PositionPage"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:local="clr-namespace:Employee_Management.UserControls" 
             xmlns:viewmodel="clr-namespace:Employee_Management.ViewModel"
             xmlns:validation="clr-namespace:Employee_Management.Validations"
             mc:Ignorable="d" 
             d:DesignHeight="450" d:DesignWidth="800">

    
    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition Height="40"></RowDefinition>
            <RowDefinition></RowDefinition>
        </Grid.RowDefinitions>
        <StackPanel Orientation="Horizontal">
            <!--<TextBox x:Name="tbDescription"
                     Validation.ErrorTemplate="{StaticResource errorTemplate}"
                     Text="{Binding TbText, UpdateSourceTrigger=PropertyChanged}"
                     Width="400" FontSize="16"
                     VerticalContentAlignment="Center">
            </TextBox>-->

            <TextBox x:Name="tbDescription"
                 Validation.ErrorTemplate="{StaticResource errorTemplate}"
                 Width="400" FontSize="16"
                 VerticalContentAlignment="Center">
                <TextBox.Text>
                    <Binding Path="TbText" UpdateSourceTrigger="PropertyChanged">
                        <Binding.ValidationRules>
                            <validation:AgeRangeRule Min="5" Max="15"/>
                        </Binding.ValidationRules>
                    </Binding>
                </TextBox.Text>
            </TextBox>


            <Button Content="Update" 
                    Width="80" Margin="10,0,0,0"
                    Command="{Binding UpdateCommand}"
                    Style="{StaticResource DefaultButtonStyle}">
            </Button>
            <Button Content="Add" 
                    Width="80" Margin="10,0,0,0"
                    Command="{Binding SaveCommand}"
                    Style="{StaticResource DefaultButtonStyle}">
            </Button>
            <Button Content="Delete"
                    Width="80" Margin="10,0,0,0"
                    Command="{Binding SaveCommand}"
                    Style="{StaticResource DefaultButtonStyle}">
            </Button>
            
        </StackPanel>
        
        <DataGrid Grid.Row="1" x:Name="DataGrid" Margin="0,10,0,0" AutoGenerateColumns="False" IsReadOnly="False" 
                  ItemsSource="{Binding Positions}"
                  SelectedItem="{Binding SelectedPosition}" FontSize="16">
            <DataGrid.Columns>  
                <DataGridTextColumn Header="ID" Binding="{Binding PositionID}" IsReadOnly="True"></DataGridTextColumn>
                <!--<DataGridTextColumn Header="Position Name" Binding="{Binding PositionDescription, UpdateSourceTrigger=PropertyChanged}"></DataGridTextColumn>-->
                <DataGridTextColumn Header="Position Name" Binding="{Binding PositionDescription}" IsReadOnly="True"></DataGridTextColumn>
            </DataGrid.Columns>
        </DataGrid>
    </Grid>
</UserControl>
