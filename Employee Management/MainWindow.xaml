        mc:Ignorable="d"
        Title="MainWindow" 
        Height="450" MinHeight="400"
        Width="800" MinWidth="600" 
        WindowStartupLocation="CenterScreen" Background="Transparent" WindowStyle="None" AllowsTransparency="True" ResizeMode="CanResize">
    
